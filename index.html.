    <script>
        function toggleSidebar() { document.getElementById('sidebar').classList.toggle('active'); }
        function navigate(pId) {
            const ps = document.querySelectorAll('.page');
            ps.forEach(p => { p.style.display = 'none'; p.classList.remove('active'); });
            const t = document.getElementById(pId);
            t.style.display = 'block'; t.classList.add('active');
            t.scrollTop = 0; toggleSidebar();
        }
    </script>
